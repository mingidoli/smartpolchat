<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ 기본 SmartPolChat 테마 (ActionBar 있음) -->
    <style name="Theme.SmartPolChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/navy</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- ✅ 추가: SplashActivity 전용 NoActionBar 테마 -->
    <style name="Theme.SmartPolChat.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/navy</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item> <!-- 배경 흰색 -->
    </style>

</resources>