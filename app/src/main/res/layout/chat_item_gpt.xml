<!--  GPT 응답용 말풍선 아이템  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="8dp">
    <!--  캐릭터 아이콘  -->
    <ImageView android:id="@+id/imageBotAvatar" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginEnd="8dp" android:src="@drawable/gpt_bot" android:contentDescription="GPT 캐릭터"/>
    <!--  GPT 말풍선  -->
    <TextView android:id="@+id/textViewMessage" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:background="@drawable/bg_gpt_avatar" android:padding="12dp" android:textColor="#000000" android:textSize="16sp"/>
</LinearLayout>